<?xml version="1.0" encoding="utf-8"?>
<slider>
	<config>
		<!-- 初期位置の設定 -->
		<current>1</current>
	
		<!-- 切り替えアニメーション時間（秒数/1000）-->
		<animate_time>1000</animate_time>
	
		<!-- 切り替えアニメーションのイージング -->
		<animate_easing>swing</animate_easing>
	
		<!-- オートスライド true/false -->
		<auto_mode>true</auto_mode>
		
		<!-- 待機時間（秒数/1000） -->
		<auto_interval>1000</auto_interval>;

		<!-- サムネイルの自動生成 true/false -->
		<thumbnail_mode>true</thumbnail_mode>
	
		<!-- サムネイル画像のサイズを設定 -->
		<thumbnail_w>80</thumbnail_w>
		<thumbnail_h>80</thumbnail_h>
	</config>
	<slide>
		<img>img/01.jpg</img>
		<img>img/02.jpg</img>
		<img>img/03.jpg</img>
		<img>img/04.jpg</img>
	</slide>
</slider>